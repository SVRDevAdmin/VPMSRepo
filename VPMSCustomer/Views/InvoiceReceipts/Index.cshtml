        $('#tblInvReceiptsProduct tbody').html('');

        $.getJSON("/InvoiceReceipts/ProductList/" + id)
         .done(function(result){
             if (result != null && result.data.length > 0)
             {
                 for (var i = 0; i < result.data.length; i++)
                 {
