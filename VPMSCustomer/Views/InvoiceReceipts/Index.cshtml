<script type="text/javascript">
    $(document).ready(function(){
        LoadDoctorDropdown();
        LoadInvoiceListing();
        LoadReceiptListing();

        $('#btnFilter').click(function(){
            $('#divContent').toggleClass('col-md-12 col-md-9');
            $('#divFilter').toggleClass('FilterBoxCollapsed');
