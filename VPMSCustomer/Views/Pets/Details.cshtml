                                        <th scope="col" class="text-left" style="width: 15%;">Patient ID</th>
                                        <th scope="col" class="text-left" style="width: 10%;">Operator ID</th>
                                        <th scope="col" class="text-left" style="width: 15%;">Device Name</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
