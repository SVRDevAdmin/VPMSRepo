    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var sessionPatientID = httpContextaccessor.HttpContext.Session.GetString("PatientID");

    var sPetIDSelected = (long)ViewData["PetSelected"];
}

