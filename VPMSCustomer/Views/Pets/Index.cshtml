        let sTreatment = '';
        sTreatment = '<div id="nav-treatment_' + iRow + '" class="tab-pane fade" role="tabpanel" aria-labelledby="nav-treatment-tab">' + 
                     '<div class="row">' + 

                     '<div class="col-md-6">' + 
                     '<div class="row me-2 treatmentTabBox">' +
                     '<div id="divActiveTreatmentPlan_' + iRow + '" class="col ms-3 treatmentTabInnerBox">' +
                     '<label class="treatmentTitle">' + '@Html.Raw(LangResources["PetGrid_Label_ActiveTreatments"])' + '</label>' +   //Active Treatments
