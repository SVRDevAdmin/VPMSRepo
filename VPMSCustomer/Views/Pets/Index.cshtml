    function populatePanelTestMgmt(iRow){
        let sTestMgmt = '';
        sTestMgmt = '<div id="nav-testmanagement_' + iRow + '" class="tab-pane fade" role="tabpanel" aria-labelledby="nav-testmanagement-tab">' + 
