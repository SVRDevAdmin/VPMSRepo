        let sPanel = '';

        sPanel += '<div id="collapse_' + iRow + '" class="row collapse mt-3 ms-3 contentDiv">' +
                  '<div class="row mt-3">' + 

                  '<nav style="display: flex;">' +
                  '<div id="nav-tab" class="nav nav-tabs" role="tablist" style="width: 70%;">' +
                  '<button id="nav-overview-tab" class="nav-link active" data-bs-toggle="tab" data-bs-target="#nav-overview_' + iRow + '" role="tab" aria-controls="nav-overview_' + iRow + '" aria-selected="true">' + '@Html.Raw(LangResources["PetGrid_Label_Overview"])' +  '</button>' + 
                  '<button id="nav-medical-tab" class="nav-link" data-bs-toggle="tab" data-bs-target="#nav-medical_' + iRow + '" role="tab" aria-controls="nav-medical_' + iRow + '" aria-selected="false">' + '@Html.Raw(LangResources["PetGrid_Label_MedicalRecord"])' + '</button>' +
