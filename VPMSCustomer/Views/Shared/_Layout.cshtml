    <style>
    .profilemenu {
        background-color: white;
        font-size: 1vw;
    }

    .profilemenu > a {
        color: black;
    }

    .profilemenu > a:hover {
        background-color: transparent !important;
    }

    .ProfileFont {
        font-size: 1vw;
        font-weight: bold;
        color: black;
        width: 11vw;
        text-wrap: wrap;
    }

    .dropdown-toggle::after {
        color: black;
    }
    </style>

    <script type="text/javascript">
        $(document).ready(function(){
            $('#divdropdowntoggle').on('click', function(ctl){
                $('.profilemenu').toggle('show');
            });
        });

        function logoutAccount()
        {
            $.post("/Login/Logout", {
                sessionID: '@LoginSessionID',
                actionType: 'logout'
            }).done(function(result){
                if (result.statusCode == 200){
                    window.location.href = '/Login/';
                }
                else {

                }
            });
        }
    </script>
</head>
<body>
    <div class="container-fluid" style="height: 100vh;">
        <div class="row flex-nowrap">

            <div id="leftPane" class="col-auto col-md-2 col-xs-2 px-sm-2 px-0" style="background-color: #F7F7F7;">
                <div class="row justify-content-md-center pt-3 pb-5">
                    <img id="imgLogo" src="~/Images/Logo/Vet-Vitals-Logo.png" width="180" height="50" />

                    <img id="imgLogoResp" src="Vet-VitalsICON.ico" style="visibility: hidden; display: none;" />
                </div>

                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 min-vh-100">

                    <ul id="menu" class="nav nav-pills flex-column ps-2 mb-sm-auto align-items-center align-items-sm-start">
                        <li class="nav-item mb-3" style="font-size: 13px; font-weight: bold; vertical-align: middle;">

                            <img src="~/Images/Icons/Icon-home.png" width="18" height="18" style="margin-right: 15px;" />
                            <span class="d-none d-sm-inline sidebar-nav-font">Home</span>
                        </li>
                        <li class="nav-item mb-3" style="font-size: 13px; font-weight: bold; vertical-align: middle;">

                            <img src="~/Images/Icons/Icon-pets.png" width="18" height="18" style="margin-right: 15px;" />
                            <span class="d-none d-sm-inline sidebar-nav-font">Pets</span>
                        </li>

                        <li class="nav-item mb-3" style="font-size: 13px; font-weight: bolder; vertical-align: middle;">

                            <img src="~/Images/Icons/Icon-appointment.png" width="18" height="18" style="margin-right: 15px;" />
                            <span class="d-none d-sm-inline sidebar-nav-font">Appointment</span>
                        </li>

                        <li class="nav-item mb-3" style="font-size: 13px; font-weight: bolder; vertical-align: middle;">

                            <img src="~/Images/Icons/Icon-invoice-receipts.png" width="18" height="18" style="margin-right: 15px;" />
                            <span class="d-none d-sm-inline sidebar-nav-font">Invoice & Receipts</span>
                        </li>

                        <li class="nav-item mb-3" style="font-size: 13px; font-weight: bold; vertical-align: middle;">

                            <img src="~/Images/Icons/Icon-analytics.png" width="18" height="18" style="margin-right: 15px;" />
                            <span class="d-none d-sm-inline sidebar-nav-font">Analytics</span>
                        </li>

                        <li class="nav-item mb-3" style="font-size: 13px; font-weight: bold; vertical-align: middle;">

                            <img src="~/Images/Icons/Icon-customer-service.png" width="18" height="18" style="margin-right: 15px;" />
                            <span class="d-none d-sm-inline sidebar-nav-font">Customer Service</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Content -->
            <div class="col-md-10">
                <div class="row" style="border: 0px solid black; height: 70px;">
                    <div class="row">
                        <div class="col-md-9" style="border: 0px solid black;">&nbsp;</div>
                        <div class="col-md-3 text-center" style="border: 0px solid black;">
                            <div style="display: flex; flex-direction: row; align-items: baseline; height: 60px;">

                                <div style="width: 60px; border-radius: 50px; margin-top: 5px; background-color: #fdf6e6;">
                                    <img src="~/Images/AvatarProfile.png" width="60" height="60" />
                                </div>
                                <div style="width: 220px; margin-left: 15px;">
                                    <div class="dropdown" style="margin-top: 10px;">
                                        <div id="divdropdowntoggle" class="dropdown-toggle" data-toggle="dropdown" style="width: 11vw;">
                                            <label class="ProfileFont">Testing</label>
                                        </div>
                                        <div class="dropdown-menu profilemenu">
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">View Profile</a>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="AccountSettings">Account Settings</a>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="ResetPassword">Reset Password</a>
                                            <a class="dropdown-item" onclick="logoutAccount()">Logout</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="border: 0px; padding-left: 5px; padding-right: 5px;">
                    @RenderBody()
                </div>
                
            </div>
        </div>
    </div>
