<div style="display: flex; justify-content: space-between;">

	<div style="display: flex; align-items: center; margin-bottom: 3vw;">
		<img id="imgBackArrow" style=" margin-right: 1vw; width: 1.5vw;" /> <span class="textColor" style="font-size: 2vw;">Treatment Plans</span>
	</div>

	<div style="display: flex; margin-bottom: 3vw; height: 3vw;">
		<input id="SearchTreatmentPlan" type="text" class="form-control form-field inputField" placeholder="Search service" onkeyup="searchFilter(this.value);" />
		<button class="btn btn-lg btn-primary" style="margin-right: 3vw; display: flex; align-items: center; width: 17vw; margin-left: 1vw;" onclick="location.href='@Url.Action("CreateNewTreatment", "PatientServices")'">
			<span id="container">+</span>
			<span style="font-size: 1vw; margin-left: 0.5vw;">New Treatment</span>
		</button>
	</div>

</div>

<div>
	<table class="textColor" id="treatmentPlanList" style="width:100%; margin-bottom: 2vw; font-size: 1vw;">
		<tr class="containerBackground">
			<th class="table-content"> @LangResources["Patient_Label_Number"] </th>
			<th class="table-content"> Treatment Name </th>
			<th class="table-content"> Date Created </th>
			<th class="table-content"> Created By </th>
			<th class="table-content"> Cost ($) </th>
			<th class="table-content"> Status </th>
			<th class="table-content">  </th>
		</tr>

		<tr style="border-bottom-width: 0.1vw; height: 3.3vw;">
			<td class="table-content"> 1 </td>
			<td class="table-content"> General Health Checkup </td>
			<td class="table-content"> 02/04/2024 </td>
			<td class="table-content"> Dr. Kim Do-yeon </td>
			<td class="table-content"> 120 </td>
			<td class="table-content">
				<div style="color: #57baa5; background-color: #c3f7ec; font-weight: bold; padding: 0.2vw 1vw; border-radius: 0.5vw; width: 6vw; margin: auto;">
					Active
				</div>
			</td>
			<td class="table-content" style="width: 0;">
				<div class="dropleft">
					<button class="btn" type="button" data-toggle="dropdown" aria-expanded="false">
						<img class="moreIcon" />
					</button>
					<div class="dropdown-menu" style="min-width: fit-content; font-size: 1vw;">
						<a class="dropdown-item" href="#"> @LangResources["Patient_Button_View"] </a>
						<a class="dropdown-item" href="#"> @LangResources["Patient_Button_Edit"] </a>
						<a class="dropdown-item" href="#"> Make Inactive </a>
					</div>
				</div>
			</td>
		</tr>

		<tr style="border-bottom-width: 0.1vw; height: 3.3vw;">
			<td class="table-content"> 2 </td>
			<td class="table-content"> General Health Checkup </td>
			<td class="table-content"> 02/04/2024 </td>
			<td class="table-content"> Dr. Kim Do-yeon </td>
			<td class="table-content"> 120 </td>
			<td class="table-content">
				<div style="color: #ff2c29; background-color: #ffc5c4; font-weight: bold; padding: 0.2vw 1vw; border-radius: 0.5vw; width: 6vw; margin: auto;">
					Inactive
				</div>				
			</td>
			<td class="table-content" style="width: 0;">
				<div class="dropleft">
					<button class="btn" type="button" data-toggle="dropdown" aria-expanded="false">
						<img class="moreIcon" />
					</button>
					<div class="dropdown-menu" style="min-width: fit-content; font-size: 1vw;">
						<a class="dropdown-item" href="#"> @LangResources["Patient_Button_View"] </a>
						<a class="dropdown-item" href="#"> @LangResources["Patient_Button_Edit"] </a>
						<a class="dropdown-item" href="#"> Make Active </a>
					</div>
				</div>
			</td>
		</tr>
	</table>

	<div id="pagination" style="display: flex; justify-content: flex-end;">
		<div>
			<button id="prevButton" onclick="prev();" style="width: 3vw; height: 3vw; margin-right: 2vw; text-align: center; display: flex; align-items: center; justify-content: center; background: transparent; border-style: none; font-weight: bold; color: gray; font-size: 1vw;" hidden>@LangResources["Patient_Button_Previous"]</button>
		</div>
		<div id="paginationNumbering" style="display: flex; justify-content: flex-end; font-size: 1vw;">
		</div>
		<div>
			<button id="nextButton" onclick="next();" style="width: 3vw; height: 3vw; margin-left: 1vw; text-align: center; display: flex; align-items: center; justify-content: center; background: transparent; border-style: none; font-weight: bold; color: #1e76fb; font-size: 1vw;" hidden>@LangResources["Patient_Button_Next"]</button>
		</div>
	</div>
</div>

<script>
	var paginationLimit = 5;
	var rowLimit = 8;
	var startPagination = 1;
	var endPagination = 0;
	var totalPagination = 0;
	var currentPage = 1;

	$(".patientServicesMenuList").toggleClass('open');
	$('.patientServicesMenuArrow').toggleClass('Up');
</script>