									</div>
									<div class="form-check">
										<input type="checkbox" class="form-check-input doctorOption" id="doctor2" name="doctor2" value="Dr. Lee Soo-jin" @(serviceInfo.DoctorInCharge.Contains("Dr. Lee Soo-jin") ? "checked='true'" : "")>
										<label class="form-check-label" for="doctor2"> Dr. Lee Soo-jin</label><br>
									</div>
									<div class="form-check">
										<input type="checkbox" class="form-check-input doctorOption" id="doctor3" name="doctor3" value="Dr. Choi Eun-woo" @(serviceInfo.DoctorInCharge.Contains("Dr. Choi Eun-woo") ? "checked='true'" : "")>
										<label class="form-check-label" for="doctor3"> Dr. Choi Eun-woo</label><br>
									</div>
									<div class="form-check">
										<input type="checkbox" class="form-check-input doctorOption" id="doctor4" name="doctor4" value="Dr. Jung Hye-jin" @(serviceInfo.DoctorInCharge.Contains("Dr. Jung Hye-jin") ? "checked='true'" : "")>
										<label class="form-check-label" for="doctor4"> Dr. Jung Hye-jin</label><br>
									</div>
									<div class="form-check">
										<input type="checkbox" class="form-check-input doctorOption" id="doctor5" name="doctor5" value="Dr. Hang Dong-hyun" @(serviceInfo.DoctorInCharge.Contains("Dr. Hang Dong-hyun") ? "checked='true'" : "")>
										<label class="form-check-label" for="doctor5"> Dr. Hang Dong-hyun</label><br>
									</div> *@
								</div>

							</div>
							<div style="display: flex; justify-content: space-between; align-items: center;">
								<button class="btn btn-lg btn-primary" id="clearFilter" href="#" style="background-color: transparent; color: blue; border-style: none; box-shadow: none;">
									<span style="font-size: 1.2vw; margin-left: 0.5vw;">@LangResources["Patient_Button_ClearAll"]</span>
								</button>
								<button id="addSelections" class="btn btn-lg btn-primary" style="font-size: 1vw;">@LangResources["Patient_Button_AddSelections"]</button>
							</div>
						</div>
					</div>
					<span id="DoctorText" class="formlabel serviceInfo" style="font-weight: normal;">@serviceInfo.DoctorInCharge</span>
				</div>
			</div>

			<div style="display: flex; margin-bottom: 1.5vw;">
				<div class="field-container quaterSize">
					<span class="formlabel">@LangResources["Inventory_Label_Organisation"]</span>
					<select id="Organisation" class="form-control form-field inputField serviceInfo hideContainer" onchange="getBranch(this.value, false);">
						<option value="" selected> -- @LangResources["Inventory_Label_SelectOrganisation"] --</option>
						@{
							var organisationName = "";
							foreach (var organisation in ViewData["Organisation"] as IEnumerable<VPMS.Lib.Data.Models.OrganisationModel>)
							{
								if (organisation.Id == ViewData["OrganisationID"] as int?)
								{
									organisationName = organisation.Name;
												<option value="@organisation.Id" selected> @organisation.Name</option>
								}
								else
								{
												<option value="@organisation.Id"> @organisation.Name</option>
								}
							}
						}
						
					</select>
					<span id="OrganisationText" class="formlabel serviceInfo" style="font-weight: normal;">@organisationName</span>
				</div>

				<div class="field-container quaterSize">
					<span class="formlabel">@LangResources["Inventory_Label_Branch"]</span>
					<select id="Branch" class="form-control form-field inputField serviceInfo hideContainer">
						<option value="" selected> -- @LangResources["Inventory_Label_SelectBranch"] --</option>
					</select>
					<span id="BranchText" class="formlabel serviceInfo" style="font-weight: normal;"></span>
				</div>

				<div class="field-container quaterSize">
					<span class="formlabel">@LangResources["Service_Label_TimeOfServiceHr"]</span>
					<input id="TimeOfService" min="0" type="number" onchange="parseFloat(parseFloat(this.value).toFixed(1));" step="0.5" class="form-control form-field inputField serviceInfo hideContainer" value="@serviceInfo.Duration" />
					<span id="TimeOfServiceText" class="formlabel serviceInfo" style="font-weight: normal;">@serviceInfo.Duration</span>
				</div>

				<div class="field-container quaterSize">
					<span class="formlabel">@LangResources["Patient_Label_Status"]</span>
					<select id="Status" class="form-control form-field inputField serviceInfo hideContainer">
						<option value=""> -- @LangResources["Patient_Selection_SelectStatus"] --</option>
						@{
							var statusName = "";
							if(serviceInfo.Status == 1)
							{
								statusName = LangResources["Patient_Selection_Active"];
								<option value="1" selected> @LangResources["Patient_Selection_Active"]</option>
								<option value="2"> @LangResources["Patient_Selection_Inactive"]</option>
							}
							else
							{
								statusName = LangResources["Patient_Selection_Inactive"];
								<option value="1"> @LangResources["Patient_Selection_Active"]</option>
								<option value="2" selected> @LangResources["Patient_Selection_Inactive"]</option>
							}
						}
					</select>
					<span id="StatusText" class="formlabel serviceInfo" style="font-weight: normal;">@statusName</span>
				</div>
			</div>

			<div style="margin-bottom: 1.5vw;">
				<div class="field-container">
					<span class="formlabel">@LangResources["Inventory_Label_Description"]</span>
					<textarea id="Description" rows="5" class="form-control form-field inputField serviceInfo hideContainer" style="width: 100%;">@serviceInfo.Description</textarea>
					<span id="DescriptionText" class="formlabel serviceInfo" style="font-weight: normal;">@serviceInfo.Description</span>
				</div>
			</div>

			<div style="margin-bottom: 1.5vw;">
				<div class="field-container">
					<span class="formlabel">@LangResources["Service_Label_Precaution"]</span>
					<textarea id="Precaution" rows="5" class="form-control form-field inputField serviceInfo hideContainer" style="width: 100%;">@serviceInfo.Precaution</textarea>
					<span id="PrecautionText" class="formlabel serviceInfo" style="font-weight: normal;">@serviceInfo.Precaution</span>
				</div>
			</div>

		</div>
	</div>

	<div style="text-align: end; margin-right: 1.6vw;">
		<button class="btn btn-lg btn-secondary" style="width: 11vw; font-size: 1vw;" onclick="location.href='@Url.Action("ServiceList", "PatientServices")'"> @LangResources["Patient_Button_Cancel"] </button>
		<button class="btn btn-lg btn-primary serviceInfo" style="width: 11vw; font-size: 1vw;" onclick="editServiceInfo();"> @LangResources["Patient_Button_Edit"] </button>
		<button class="btn btn-lg btn-primary serviceInfo hideContainer" style="width: 11vw; font-size: 1vw;" onclick="saveServiceInfo();"> @LangResources["Patient_Button_Save"] </button>
	</div>

</div>

<script>
	var doctorListIDGlobal = [];
	updateDoctors();
	getBranch(@ViewData["OrganisationID"], true);

	if ("@ViewData["Type"]" == "Edit") {
		editServiceInfo();
	}

	$("#SubMenuServices").toggleClass('show');
	document.querySelector("#SubMenuServicesParent").querySelector("#imgArrow").classList.toggle("Up");

	$('#Organisation').change();
	getBranch("@ViewData["OrganisationID"]", true);

	document.querySelector('#addSelections').addEventListener('click', function (event) {
		if (this.classList.contains("disable")) { event.stopPropagation(); }
		else {
			// const a = document.querySelectorAll(".doctorOption");
			// var doctorList = ""

			// for (let i = 0; i < a.length; i++) {
			// 	if (a[i].checked) {
			// 		doctorList += a[i].value + ";";
			// 	}
			// }

			// document.getElementById("Doctor").value = doctorList;

			updateDoctors();

		}
	});

	function updateDoctors(){
		const a = document.querySelectorAll(".doctorOption");
		var doctorList = "";
		var doctorListID = [];

		for (let i = 0; i < a.length; i++) {
			if (a[i].checked) {
				doctorList += a[i].value + ";";
				doctorListID.push(a[i].getAttribute('data-id'));
			}
		}

		doctorListIDGlobal = doctorListID;
		document.getElementById("Doctor").value = doctorList;
	}

	document.querySelector('#clearFilter').addEventListener('click', function (event) {
		event.stopPropagation();

		const a = document.querySelectorAll(".doctorOption");

		for (let i = 0; i < a.length; i++) {
			if (a[i].checked) {
				a[i].checked = false;
			}
		}

		document.getElementById("searchDoctor").value = "";
		$('#searchDoctor').keyup();

		var addSelections = document.getElementById("addSelections");
		if (!addSelections.classList.contains("disable")) { addSelections.classList.toggle("disable"); }

	});

	var selections = document.querySelectorAll('.form-check');

	for (let i = 0; i < selections.length; i++) {
		selections[i].addEventListener('click', function (event) {
			event.stopPropagation();

			const a = document.querySelectorAll(".doctorOption");
			var disabledFilter = true;

			for (let i = 0; i < a.length; i++) {
				if (a[i].checked) {
					disabledFilter = false;
				}
			}

			var addSelections = document.getElementById("addSelections");
			if (disabledFilter) {
				if (!addSelections.classList.contains("disable")) { addSelections.classList.toggle("disable"); }
			}
			else {
				if (addSelections.classList.contains("disable")) { addSelections.classList.toggle("disable"); }
			}

		});
	}

	function filterDoctor(value) {
		const filter = value.value.toUpperCase();

		const a = document.querySelectorAll(".doctorOption");

		for (let i = 0; i < a.length; i++) {
			var doctorValue = a[i].value;
			if (doctorValue.toUpperCase().indexOf(filter) > -1) {
				a[i].parentElement.style.display = "";
			} else {
				a[i].parentElement.style.display = "none";
			}
		}
	}

	function getBranch(organisationID, selected) {
		fetch('/PatientServices/GetBranchList?organisationID=' + organisationID)
			.then(response => {
				if (!response.ok) {
					throw new Error('Network response was not ok');
				}
				return response.json();
			})
			.then(data => {

				var element = document.getElementById("Branch");

				if (selected) {
					element.innerHTML = '<option value=""> -- @LangResources["Inventory_Label_SelectBranch"] -- </option>';
				}
				else {
					element.innerHTML = '<option value="" selected> -- @LangResources["Inventory_Label_SelectBranch"] -- </option>';
				}

				for (let i = 0; i < data.length; i++) {
					if (selected && data[i].ID == @serviceInfo.BranchID) {
						element.innerHTML = element.innerHTML + '<option value="' + data[i].ID + '" selected>' + data[i].Name + '</option>';
						document.getElementById("BranchText").innerHTML = data[i].Name;
					}
					else {
						element.innerHTML = element.innerHTML + '<option value="' + data[i].ID + '">' + data[i].Name + '</option>';
					}
				}
			})
			.catch(error => {
				console.error('There was a problem with the fetch operation:', error);
			});
	}

	function editServiceInfo(){
		var element = document.querySelectorAll(".serviceInfo");

		for (let i = 0; i < element.length; i++) {
			element[i].classList.toggle("hideContainer");
		}
	}

	function saveServiceInfo() {
		var ID = document.getElementById("ServiceID").value
		var ServiceName = document.getElementById("ServiceName").value
		var Category = document.getElementById("Category").value
		var Price = document.getElementById("Price").value
		var Doctor = document.getElementById("Doctor").value
		var Organisation = document.getElementById("Organisation").value
		var Branch = document.getElementById("Branch").value
		var TimeOfService = document.getElementById("TimeOfService").value
		var Status = document.getElementById("Status").value
		var Description = document.getElementById("Description").value
		var Precaution = document.getElementById("Precaution").value
		var CreatedDate = document.getElementById("ServiceCreatedDate").value
		var CreatedBy = document.getElementById("ServiceCreatedBy").value

		var obj = {
			ID: ID,
			Name: ServiceName,
			CategoryID: Category,
			Prices: Price,
			DoctorInCharge: Doctor,
			BranchID: Branch,
			Duration: TimeOfService,
			Status: Status,
			Description: Description,
			Precaution: Precaution,
			CreatedDate: CreatedDate,
			CreatedBy: CreatedBy
		};

		var test = doctorListIDGlobal;

		fetch('/PatientServices/UpdateService', {
			method: 'post',
			headers: { 'Content-Type': 'application/json' },
			body: JSON.stringify(obj)
		})
			.then(response => {
				if (!response.ok) {
					throw new Error('Network response was not ok');
				}
				return response.json();
			})
			.then(data => {
				if(data != 0){
					// window.location = "/PatientServices/ServiceList";
					var test = doctorListIDGlobal;
					saveDoctorList(ID);
				}
			})
			.catch(error => {
				console.error('There was a problem with the fetch operation:', error);
			});

	}

	function saveDoctorList(id) {
		var test = doctorListIDGlobal;

		fetch('/PatientServices/UpdateServiceDoctor?serviceID=' + id, {
			method: 'post',
			headers: { 'Content-Type': 'application/json' },
			body: JSON.stringify(doctorListIDGlobal)
		})
			.then(response => {
				if (!response.ok) {
					throw new Error('Network response was not ok');
				}
				return response.json();
			})
			.then(data => {
				if (data) {
					window.location = "/PatientServices/ServiceList";
				}
			})
			.catch(error => {
				console.error('There was a problem with the fetch operation:', error);
			});
	}
</script>