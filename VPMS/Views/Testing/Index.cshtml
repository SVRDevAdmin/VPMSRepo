    <title>Custom Arrow Range Slider</title>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>

    <style>
		/* Container for the slider */
		.slider-container {
			width: 300px;
			position: relative;
			height: 8px;
			background: linear-gradient(to right, #fcc11d 33%, white 33%, white 33.5%, #42c0a5 33.5%, #42c0a5 66%, white 66%, white 66.5%, #ea4643 66.5%);
			border-radius: 5px;
			overflow: visible; /* Allow the thumb to display outside the container */
			margin: 10vw;
		}

		/* Styling the range input to be invisible but functional */
		.slider {
			-webkit-appearance: none;
			width: 100%;
			height: 8px;
			background: transparent;
			position: absolute;
			top: -9px;
			left: 0;
			outline: none;
			cursor: pointer;
		}

