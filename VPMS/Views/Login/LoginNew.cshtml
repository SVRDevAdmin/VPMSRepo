@model VPMS.Lib.Data.Models.LoginModel;

@{
	Layout = "_LoginLayout";
	ViewData["Title"] = "Login Page";
}

<form id="registerForm" method="post" asp-controller="Login" asp-action="SignIn">
	<h1 style="text-align: center;font-size: 3.3vw;margin-bottom: 2vw;">Login</h1>
	<div class="form-floating mb-3 fieldContainer" style="margin-bottom: 1.8vw !important;">
		<div class="fieldContainerChild">
			<img src="~/images/skins/icon_ion_person_sharp.png" />
			<input asp-for="Username" class="form-control" aria-required="true" placeholder="Login ID" />
		</div>
		<span asp-validation-for="Username" class="text-danger"></span>
	</div>
	<div class="form-floating mb-3 fieldContainer" style="margin-bottom: 3vw !important;">
		<div class="fieldContainerChild">
			<img src="~/images/skins/icon_ion_locked.png" />
			<input asp-for="Password" autocomplete="new-password" class="form-control" aria-required="true" placeholder="Password" />
		</div>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<button id="loginSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
	<a style="display: flex; justify-content: center; margin-top: 1vw; font-size: 1.2vw;" id="recoverySubmit" asp-controller="Login" asp-action="PasswordRecovery">Forgot password?</a>
</form>

