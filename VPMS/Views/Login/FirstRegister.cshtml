@model VPMS.Lib.Data.Models.RegisterModel;

@{
    Layout = null;
    ViewData["Title"] = "Register Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VPMS</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />-->
    <!--<link rel="stylesheet" href="~/VPMS.styles.css" asp-append-version="true" />---->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>

    <div class="row" style="justify-content:center; margin: 0;">
        <div class="col-md-8">
            <form id="registerForm" method="post" asp-controller="Login" asp-action="SignUp">
                <h2>Create a new account.</h2>
                <hr />
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" aria-required="true" placeholder="Full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" aria-required="true" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" aria-required="true" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Branch" class="form-control" aria-required="true">
                        <option value="">-- Select role --</option>
                        @foreach (var Branch in Model.Branches)
                        {
                            <option value="@Branch.ID">@Branch.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Role" class="form-control" aria-required="true">
                        <option value="">-- Select role --</option>
                        @foreach(var Role in Model.Roles)
                        {
                            <option value="@Role.RoleID">@Role.RoleName</option>
                        }
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="~/lib/ajax/popper.js/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>