@model VPMS.Lib.Data.Models.LoginModel;
﻿@using Microsoft.AspNetCore.Localization
@inject VPMSWeb.Interface.IResourcesLocalizer LangResources

@{
	Layout = "_LoginLayout";
	ViewData["Title"] = "Login Page";
}

<form id="registerForm" method="post" asp-controller="Login" asp-action="SignIn">
	<h1 class="form-title textColor">@LangResources["Login_Title_Login"]</h1>
	<div class="form-floating mb-3 fieldContainer" style="margin-bottom: 1.8vw !important;">
		<div class="fieldContainerChild">
			<img src="~/images/skins/icon_ion_person_sharp.png" />
			<input asp-for="Username" class="form-control" aria-required="true" placeholder="@LangResources["Login_Placeholder_LoginID"]" />
		</div>
		<span asp-validation-for="Username" class="text-danger"></span>
	</div>
	<div class="form-floating mb-3 fieldContainer" style="margin-bottom: 3vw !important;">
		<div class="fieldContainerChild">
			<img src="~/images/skins/icon_ion_locked.png" />
			<input asp-for="Password" autocomplete="new-password" class="form-control" aria-required="true" placeholder="@LangResources["Login_Placeholder_Password"]" />
		</div>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<button id="loginSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@LangResources["Login_Title_Login"]</button>
	<a class="link" style="color: darkgray;" asp-controller="Login" asp-action="PasswordRecovery">@LangResources["Login_Link_ForgotPassword"]</a>
</form>

