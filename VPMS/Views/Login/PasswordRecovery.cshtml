@model VPMS.Lib.Data.Models.RegisterModel;
﻿@using Microsoft.AspNetCore.Localization
@inject VPMSWeb.Interface.IResourcesLocalizer LangResources

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Password Recovery Page";
}

<form id="registerForm" method="post" asp-controller="Login" asp-action="RecoverPassword">
    <h1 class="form-title textColor">@LangResources["Login_Title_PasswordRecovery"]</h1>

    <div class="form-floating mb-3 fieldContainer" style="margin-bottom: 1.8vw !important;">
        <div class="fieldContainerChild">
            <img src="~/images/skins/icon_ion_person_sharp.png" />
            <input asp-for="Username" class="form-control" aria-required="true" placeholder="@LangResources["Login_Placeholder_LoginID"]" />
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3 fieldContainer" style="margin-bottom: 3vw !important;">
        <div class="fieldContainerChild">
            <img src="~/images/skins/icon_ion_locked.png" />
            <input asp-for="Email" class="form-control" aria-required="true" placeholder="@LangResources["Login_Placeholder_Email"]" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button id="RecoverySubmit" type="submit" class="w-100 btn btn-lg btn-primary">@LangResources["Login_Button_RecoverPassword"]</button>
    <a class="link" asp-controller="Login" asp-action="Login">@LangResources["Login_Button_Back"]</a>
</form>