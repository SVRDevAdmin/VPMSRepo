﻿@using Microsoft.AspNetCore.Localization
@inject IHttpContextAccessor httpContextaccessor
@inject VPMSWeb.Interface.IResourcesLocalizer LangResources
<!DOCTYPE html>
<html lang="en">
<head>
    @* <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests"> *@
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <link rel="stylesheet" href="~/css/login.css" />

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/16798ef2db.js" crossorigin="anonymous"></script>

    @{
        var theme = httpContextaccessor.HttpContext.Request.Cookies["theme"];
        if (theme != null)
        {
            if (theme == "dark")
            {
                <link id="themeCss" rel="stylesheet" href="~/css/DarkTheme.css" />
                ViewBag.DarkTheme = "Dark";
            }
            if (theme == "light")
            {
                <link id="themeCss" rel="stylesheet" href="~/css/LightTheme.css" />
                ViewBag.DarkTheme = "Light";
            }
        }
        else
        {
            <link id="themeCss" rel="stylesheet" href="~/css/LightTheme.css" />
            ViewBag.DarkTheme = "Light";
            /* temp */
        }
    }

</head>
<body>

    <div id="content-container">

        @if (ViewData["alert"] != null)
        {
            <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert" id="alert" style="position: fixed; z-index: 9999;left: 50%; transform: translate(-50%, 0);">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div style="margin-left: 1vw;">@ViewData["alert"]</div>
            </div>
        }

        <a href="#" id="theme" onclick="toggleTheme(true);">
            <img src="~/images/skins/path_4043.png" id="path_4043" />

            <div id="group_1138">
                <div id="rectangle_1045"></div>
                <div id="rectangle_1046"></div>

            </div>

            <div id="icon_feather_sun">
                <img src="~/images/skins/path_519.png" id="path_519" />
                <img src="~/images/skins/path_520.png" id="path_520" />
                <img src="~/images/DarkWhite.png" id="dark_theme_icon" />

            </div>

        </a>

        <div id="application_logo">
            <img id="imgLogo" style="width: 5vw;" />
            <img id="imgLogoTitle" style="width: 13vw; margin-left: 0.5vw;" />
        </div>

        <div id="group_2126">
            <img src="~/images/skins/bg_line_ek1.png" id="bg_line_left" />
            <div id="circle_bg_left"></div>
            <img src="~/images/skins/border_collie_dog.png" id="border_collie_dog" />
            <div id="ellipse_413"></div>
        </div>

        <div id="img_group_right">
            <img src="~/images/skins/bg_line.png" id="bg_line" />
            <div id="bg"></div>
            <img src="~/images/skins/kitten.png" id="kitten_img" />
            <div id="ellipse_412"></div>
        </div>

        <div class="row" style="justify-content:center; margin-top: 10vh; margin-right: 0;">
            <div style="width: 31vw;">
                @RenderBody()
            </div>
        </div>

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <script type="text/javascript">

        if ('@ViewBag.darkTheme' == 'Dark') {
            toggleTheme(false);
        }

        $(document).ready(function () {
            $("#alert").fadeTo(2000, 500).slideUp(500, function () {
                $("#alert").alert("close");
            });
        });

        function updateThemes(themes) {
            $.post("/Theme/SetThemes", {
                data: themes
            }).done(function (resp) {
                // window.location.reload();
            });
        }

        function toggleTheme(changeCookie) {
            var element = document.getElementById("group_1138");
            var darkIcon = document.getElementById("dark_theme_icon");
            var lightIcon1 = document.getElementById("path_519");
            var lightIcon2 = document.getElementById("path_520");
            element.classList.toggle("darktheme");
            darkIcon.classList.toggle("darktheme");
            lightIcon1.classList.toggle("darktheme");
            lightIcon2.classList.toggle("darktheme");

            if (changeCookie) {
                var theme = "";

                if (lightIcon1.classList.contains("darktheme")) {
                    updateThemes("dark");
                    theme = '/css/DarkTheme.css';
                }
                else {
                    updateThemes("light");
                    theme = '/css/LightTheme.css';
                }

                if (document.getElementById("themeCss")) {
                    document.getElementById("themeCss").href = theme;
                }
                else {
                    var head = document.getElementsByTagName('head')[0];
                    var link = document.createElement('link');
                    link.Id = "themeCss"
                    link.rel = 'stylesheet';
                    link.href = theme;
                    head.appendChild(link);
                }
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
