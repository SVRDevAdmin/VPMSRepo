    <script type="text/javascript">        

        if ('@ViewBag.darkTheme' == 'Dark') {
            toggleTheme(false);
        }

        var pageName = '@ViewBag.SelectedMenu';
        $("#" + pageName).toggleClass('selected')

        $(document).ready(function () {
            $('#txtfilter').on('keyup', function () {
                var value = $(this).val().toLowerCase();

                $('#countrylist a').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function updateCountrySettings() {
            $country = $('.list-group-item.active').text();

            if ($country != null && $country.length > 0) {
                $.post("Configuration/UpdateUserConfiguration", {
                    UserID: 'd8a3963a-7dda-44c9-9a3b-8fcfb488dff9',
                    ConfigKey: 'UserSettings_Country',
                    ConfigVal: $country
                });
            }
        }

        $('#btnSave').on('click', function () {
            $lang = $("input[type='radio'][name='listgrpradio']:checked").val();

            if ($lang != null && $lang.length > 0) {
                $.post("/Home/ChangeLanguage", {
                    lang: $lang,
                    UserID: 'd8a3963a-7dda-44c9-9a3b-8fcfb488dff9'
                }).done(function (resp) {
                    updateCountrySettings();

                    window.location.reload();
                });
            }
            else {
                updateCountrySettings();

                window.location.reload();
            }
        });

        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        $('.sidebar-nav li').click(function (e) {
            if ($(this).find('#imgArrow').length > 0) {
                $(this).find('ul').toggleClass('open');
                $(this).find('#imgArrow').toggleClass('Up');
            }
            else {
                $('.sidebar-nav').find('span').removeClass('selected');
                $(this).find('span').toggleClass('selected');
            }
        })

        $('.sidebar-nav li ul li').click(function (e) {
            $('.sidebar-nav').find('span').removeClass('selected');

            $(this).parent().toggleClass('open');
            $(this).parent().parent().find('#imgArrow').toggleClass('Up');
            $(this).parent().parent().parent().find('span').toggleClass('selected');
        });

        $('#countrylist > .list-group-item').on('click', function(){
            $this = $(this);

            $('.active').removeClass('active');
            $this.toggleClass('active');
        });

        $('#btnDark').on('click', function () {
            var sTheme = $(this)[0].attributes['data'].value;
            updateThemes(sTheme);
        });

        $('#btnBright').on('click', function () {
            var sTheme = $(this)[0].attributes['data'].value;
            updateThemes(sTheme);
        });

        function updateThemes(themes) {
            $.post("/Theme/SetThemes", {
                data: themes,
                userid: 'd8a3963a-7dda-44c9-9a3b-8fcfb488dff9'
            }).done(function (resp) {
                // window.location.reload();
            });
        }

        function toggleTheme(changeCookie) {
            var element = document.getElementById("group_1138");
            var darkIcon = document.getElementById("dark_theme_icon");
            var lightIcon1 = document.getElementById("path_519");
            var lightIcon2 = document.getElementById("path_520");
            element.classList.toggle("darktheme");
            darkIcon.classList.toggle("darktheme");
            lightIcon1.classList.toggle("darktheme");
            lightIcon2.classList.toggle("darktheme");

            if (lightIcon1.classList.contains("darktheme")) {
                if (typeof borderOpacity !== 'undefined') {
                    borderOpacity = "0.5";
                    axisColor = "white";
                    changeChart("current");
                }
            } else {
                if (typeof borderOpacity !== 'undefined') {
                    borderOpacity = "0.1";
                    axisColor = "black";
                    changeChart("current");
                }
            }


            if (changeCookie) {
                var theme = "";

                if (lightIcon1.classList.contains("darktheme")) {
                    updateThemes("dark");
                    theme = '/css/DarkTheme.css';
                }
                else {
                    updateThemes("light");
                    theme = '/css/LightTheme.css';
                }

                if (document.getElementById("themeCss")) {
                    document.getElementById("themeCss").href = theme;
                }
                else {
                    var head = document.getElementsByTagName('head')[0];
                    var link = document.createElement('link');
                    link.id = "themeCss"
                    link.rel = 'stylesheet';
                    link.href = theme;
                    head.appendChild(link);
                }
            }
        }

