            $this = $(this);

            $('.active').removeClass('active');
            $this.toggleClass('active');
        });

        $('#btnDark').on('click', function () {
            var sTheme = $(this)[0].attributes['data'].value;
            updateThemes(sTheme);
        });

        $('#btnBright').on('click', function () {
            var sTheme = $(this)[0].attributes['data'].value;
            updateThemes(sTheme);
        });

        function updateThemes(themes) {
            $.post("/Theme/SetThemes", {
                data: themes,
                userid: '@sessionUserID'
            }).done(function (resp) {
                // window.location.reload();
            });
        }

        function toggleTheme(changeCookie) {
            var element = document.getElementById("group_1138");
            var darkIcon = document.getElementById("dark_theme_icon");
            var lightIcon1 = document.getElementById("path_519");
            var lightIcon2 = document.getElementById("path_520");
            element.classList.toggle("darktheme");
            darkIcon.classList.toggle("darktheme");
            lightIcon1.classList.toggle("darktheme");
            lightIcon2.classList.toggle("darktheme");

            if (lightIcon1.classList.contains("darktheme")) {
                if (typeof borderOpacity !== 'undefined') {
                    borderOpacity = "0.5";
                    axisColor = "white";
                    changeChart("current");
                }
            } else {
                if (typeof borderOpacity !== 'undefined') {
                    borderOpacity = "0.1";
                    axisColor = "black";
                    changeChart("current");
                }
            }


            if (changeCookie) {
                var theme = "";

                if (lightIcon1.classList.contains("darktheme")) {
                    updateThemes("dark");
                    theme = '/css/DarkTheme.css';
                }
                else {
                    updateThemes("light");
                    theme = '/css/LightTheme.css';
                }

                if (document.getElementById("themeCss")) {
                    document.getElementById("themeCss").href = theme;
                }
                else {
                    var head = document.getElementsByTagName('head')[0];
                    var link = document.createElement('link');
                    link.Id = "themeCss"
                    link.rel = 'stylesheet';
                    link.href = theme;
                    head.appendChild(link);
                }
            }
        }

        // Confirmation MessageBox
        function ShowConfirmCancelMsgBox(MsgTitle, MsgContent, YesButtonCallback, NoButtonCallback) {
            AsyncConfirmYesNo(
                MsgTitle,
                MsgContent,
                YesButtonCallback,
                NoButtonCallback
            );
        }

        function AsyncConfirmYesNo(title, msg, yesFn, noFn) {
            var $confirm = $("#modalConfirmYesNo");
            $confirm.modal('show');
            $("#lblTitleConfirmYesNo").html(title);
            $("#lblMsgConfirmYesNo").html(msg);
            $("#btnYesConfirmYesNo").off('click').click(function () {
                yesFn();
                $confirm.modal("hide");
            });
            $("#btnNoConfirmYesNo").off('click').click(function () {
                noFn();
                $confirm.modal("hide");
            });
        }

        function ShowSuccessMsgBox(MsgTitle, MsgContent, ButtonCallback)
        {
            AsyncSuccess(
                MsgTitle, 
                MsgContent, 
                ButtonCallback
            );
        }

        function AsyncSuccess(title, msg, btnFn) {
            var $success = $("#modalSuccess");
            $success.modal('show');
            $("#lbTitleSuccess").html(title);
            $("#lbMsgSuccess").html(msg);
            $("#btnOK").off('click').click(function () {
                btnFn();
                $success.modal("hide");
            });
        }


        function AccessDenied(){
            $("#accessDenied").slideDown(500);

            setTimeout(function () {
                $("#accessDenied").slideUp(500, function () {
                    $("#accessDenied")[0].style.setProperty('display', 'none', 'important');
                });
            }, 2500);
            
        }

