@inject IHttpContextAccessor httpContextaccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VPMS</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="false"></script>

    <script src="~/lib/bootstrap/dist/js/v4.6.2/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @{
        var theme = httpContextaccessor.HttpContext.Request.Cookies["theme"];
        if (theme != null)
        {
            if (theme == "dark")
            {
                        <link id="themeCss" rel="stylesheet" href="~/css/DarkTheme.css" />
                ViewBag.DarkTheme = "Dark";
            }
            if (theme == "light")
            {
                        <link id="themeCss" rel="stylesheet" href="~/css/LightTheme.css" />
                ViewBag.DarkTheme = "Light";
            }
        }
        else
        {
                    <link id="themeCss" rel="stylesheet" href="~/css/LightTheme.css" />
            ViewBag.DarkTheme = "Light";
            /* temp */
        }
    }

    <style>

        /*below are for theme button*/

        #theme {
            z-index: 9998;
            position: absolute;
            right: 0;
        }

        #path_4043 {
            top: 1vw;
            right: 1vw;
            width: 6.5vw;
            height: 3.5vw;
            position: absolute;
        }

        #group_1138 {
            top: 1.4vw;
            right: 1.5vw;
            width: 2.6vw;
            position: absolute;
            /*animation*/
            transition: all 0.5s linear;
        }

            #group_1138.darktheme {
                top: 1.4vw;
                right: 3.5vw;
                width: 3.6vw;
                position: absolute;
                /*animation*/
                transition: all 0.5s linear;
            }

        #dark_theme_icon {
            visibility: hidden;
            opacity: 0;
            /*animation*/
            transition: opacity 0.5s linear;
        }

            #dark_theme_icon.darktheme {
                visibility: visible;
                opacity: 1;
                top: -0.25vw;
                right: 2.7vw;
                width: 1.6vw;
                position: absolute;
                /*animation*/
                transition: opacity 0.5s linear;
            }


        #rectangle_1045, #rectangle_1046 {
            width: 2.6vw;
            height: 2.6vw;
            -ms-border-radius: 7px;
            -o-border-radius: 7px;
            -moz-border-radius: 7px;
            -webkit-border-radius: 7px;
            border-radius: 0.5vw;
            background: rgba(30, 118, 251, 255);
            position: absolute;
        }

        #icon_feather_sun {
            top: 2.2vw;
            right: 2.2vw;
            width: 2.05vw;
            position: absolute;
        }

        #path_519 {
            top: 0.15vw;
            right: 0.15vw;
            width: 0.9vw;
            position: absolute;
            visibility: visible;
            opacity: 1;
            /*animation*/
            transition: opacity 0.5s linear;
        }


        #path_520 {
            top: -0.21vw;
            right: -0.21vw;
            width: 1.6vw;
            position: absolute;
            visibility: visible;
            opacity: 1;
            /*animation*/
            transition: opacity 0.5s linear;
        }

            #path_519.darktheme, #path_520.darktheme {
                visibility: hidden;
                opacity: 0;
                /*animation*/
                transition: opacity 0.5s linear;
            }
    </style>
</head>
<body onload="StartTimers();" onmousemove="ResetTimers();" onkeydown="ResetTimers();">

    <div class="alert alert-danger alert-dismissible d-flex align-items-center" role="alert" id="alert" style="position: fixed; z-index: 9999;left: 50%; transform: translate(-50%, 0); display: none !important;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div style="margin-left: 1vw;">You will be automatically logout if continue to idle.</div>
    </div>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <dix class="col-auto bar-menu-bg">
                <div class="d-flex flex-column align-items-center" style="width: 262px; margin-top: 35px; margin-left: 22px;">
                    <div class="col-md-12">
                        <img id="imgLogo" style="width: 40px; height: 34px; " />
                        <img id="imgLogoTitle" style="width: 160px; height: 22px;" />
                    </div>
                </div>
                <ul class="sidebar-nav">
                    <li style="margin-top: 85px; margin-bottom: 10px">
                        <a asp-controller="Dashboard" asp-action="Index">
