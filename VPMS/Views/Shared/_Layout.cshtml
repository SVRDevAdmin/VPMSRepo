                }
                else{
                    // $(this).find('ul').toggleClass('collapse');
                    // $(this).find('ul').hide();
                    

                    $(this).find('#imgArrow').removeClass('Up');
                }
            }
            else {
                $('#menu').find('span').removeClass('selected');
                $(this).find('.spanMenuBlue').toggleClass('selected');
