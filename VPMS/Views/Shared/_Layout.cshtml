@inject IHttpContextAccessor httpContextaccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VPMS</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/lib/bootstrap/dist/js/v4.6.2/bootstrap.bundle.min.js"></script>

    @{
        var theme = httpContextaccessor.HttpContext.Request.Cookies["theme"];
        if (theme != null)
        {
            if (theme == "dark")
            {
                <link rel="stylesheet" href="~/css/darktheme.css" />
            }
            if (theme == "light")
            {
                <link rel="stylesheet" href="~/css/lighttheme.css" />
            }
        }
        else
        {
            <link rel="stylesheet" href="~/css/lighttheme.css" />
        }
    }

    <style type="text/css">
        .searchbarInput {
            border: 0px solid #fff;
            box-shadow: unset !important;
            background-color: transparent !important;
        }

        .searchIcon {
            margin-top: auto;
            margin-bottom: auto;
        }

        #wrapper.toggled {
            padding-left: 250px;
        }

        /* Dropdown css */
        .dropdown {
            float: left;
            /* overflow: hidden; */
        }

            .dropdown .dropbtn {
                cursor: pointer;
                font-size: 16px;
                border: none;
                outline: none;
                color: black;
                /* padding: 14px 16px; */
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

        #wrapper #sidebar-wrapper {
            width: 280px;
            height: 100%;
        }

        #page-content-wrapper {
            width: 100%;
            position: absolute;
            padding: 15px;
            margin-left: 280px;
            /* temp */
            /*border-style: solid;
            height: auto;*/
        }

        #wrapper.toggled #page-content-wrapper {
            position: absolute;
            /*margin-right: -250px;*/
        }


        /* Sidebar Styles */
        .bar-menu-bg {
            background-color: #f7f7f7;
        }

        .sidebar-nav {
            background-color: #f7f7f7;
            list-style: none;
            position: fixed;
            top: 88px;
            width: 310px;
            height: 100%;
            margin-left: -15px;
            padding: 0;  
        }

        .sidebar-nav li {
            text-indent: 0px;
            line-height: 40px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .sidebar-nav li a {
            display: block;
            text-decoration: none;
            color: #999999;
        }

        .sidebar-nav li a:hover {
            text-decoration: none;
            color: #fff;
            background: rgba(255, 255, 255, 0.2);
        }

        .sidebar-nav li a:active, .sidebar-nav li a:focus {
            text-decoration: none;
        }

        .sidebar-nav li span.selected {
            /*background-color: orange;*/
            background-color: rgb(30, 118, 251); 
            display: inline-block;
        }

        .sidebar-nav li span {
            background-color: none;
        }

        .sidebar-nav li ul {
            margin-left: 88px;
            padding-left: 20px;
            list-style-type: none;
            border-left-style: solid;
            border-left-color: #707B7C;
            border-left-width: thin;
            display: none;
        }

        .sidebar-nav li ul li {
            width: 140px;
            color: black;
            line-height: 30px;
        }

        .sidebar-nav li ul li:first-child{
            margin-top: 0px;
        }

        .sidebar-nav li ul li:last-child{
            margin-bottom: 0px;
        }

        .sidebar-nav li ul.open {
            display: inline-block;
        }

        .sidebar-nav li a #imgArrow {
            content: url('images/down-arrow.png');
        }

        .sidebar-nav li a #imgArrow.Up {
            content: url('images/arrow-up.png');
        }

        #imgProfileArrow {
            content: url('images/down-arrow.png');
        }

        .sidebar-nav > .sidebar-brand {
            height: 65px;
            font-size: 18px;
            line-height: 60px;
        }

        .sidebar-nav > .sidebar-brand a {
            color: #999999;
        }

        .sidebar-nav > .sidebar-brand a:hover {
            color: #fff;
            background: none;
        }

        @@media(min-width:768px) {
            #wrapper {
                padding-left: 0;
            }

            #wrapper.toggled {
                padding-left: 250px;
            }

            #sidebar-wrapper {
                width: 0;
            }

            #wrapper.toggled #sidebar-wrapper {
                width: 250px;
            }

            #page-content-wrapper {
                padding: 20px;
                position: relative;
            }

            #wrapper.toggled #page-content-wrapper {
                position: relative;
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <dix class="col-auto bar-menu-bg">
                <div class="d-flex flex-column align-items-center" style="width: 270px; margin-top: 35px; margin-left: 10px;">
                    <div class="col-md-12">
                        <img src="images/vpms_logo_icon.png" style="width: 40px; height: 34px; " />
                        <img src="images/vpms_logo.png" style="width: 160px; height: 22px;" />
                    </div>

                </div>
                <ul class="sidebar-nav">
                    <li style="margin-top: 85px; margin-bottom: 10px">
                        <a asp-controller="Dashboard" asp-action="Index">
