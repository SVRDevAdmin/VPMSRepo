    <style type="text/css">
        body {
            overflow-x: hidden;
        }

        #wrapper {
            padding-left: 0;
            -webkit-transition: all 0.5s ease;
            -moz-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
            transition: all 0.5s ease;
        }

            #wrapper.toggled {
                padding-left: 250px;
            }

        #sidebar-wrapper {
            z-index: 1000;
            /*position: fixed;*/
            position: fixed;
            left: 250px;
            height: 100%;
            margin-left: -250px;
            /*overflow-y: auto;*/
            /*background: #000;*/
            background: #f2f2f2;
            -webkit-transition: all 0.5s ease;
            -moz-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
            transition: all 0.5s ease;
        }

        #wrapper.toggled #sidebar-wrapper {
            width: 280px;
        }

        #wrapper #sidebar-wrapper {
            width: 280px;
            height: 100%;
        }

        #page-content-wrapper {
            width: 100%;
            position: absolute;
            padding: 15px;
            margin-left: 250px;
            /* temp */
            /*border-style: solid;
            height: auto;*/
        }

        #wrapper.toggled #page-content-wrapper {
            position: absolute;
            margin-right: -250px;
        }


        /* Sidebar Styles */

        .sidebar-nav {
            /*position: absolute;*/
            position: fixed;

            top: 150px;
            width: 280px;
            margin: 0;
            padding: 0;
            list-style: none;
            /* temp
                    border-style: solid;*/
        }

            .sidebar-nav li {
                text-indent: 0px;
                line-height: 40px;
                margin-top: 10px;
                margin-bottom: 10px;
            }

                .sidebar-nav li a {
                    display: block;
                    text-decoration: none;
                    color: #999999;
                }

                    .sidebar-nav li a:hover {
                        text-decoration: none;
                        color: #fff;
                        background: rgba(255, 255, 255, 0.2);
                    }

                    .sidebar-nav li a:active, .sidebar-nav li a:focus {
                        text-decoration: none;
                    }

                .sidebar-nav li span.selected {
                    background-color: orange;
                    display: inline-block;
                }

                .sidebar-nav li span {
                    background-color: none;
                }

                .sidebar-nav li ul {
                    margin-left: 88px;
                    padding-left: 20px;
                    list-style-type: none;
                    border-left-style: solid;
                    border-left-color: #707B7C;
                    border-left-width: thin;
                    display: none;
                }

                    .sidebar-nav li ul li {
                        width: 140px;
                        color: black;
                        line-height: 30px;
                    }

                    .sidebar-nav li ul li:first-child{
                        margin-top: 0px;
                    }

                    .sidebar-nav li ul li:last-child{
                        margin-bottom: 0px;
                    }

                    .sidebar-nav li ul.open {
                        display: inline-block;
                    }

                .sidebar-nav li a #imgArrow {
                    content: url('/images/down-arrow.png');
                }

                    .sidebar-nav li a #imgArrow.Up {
                        content: url('/images/arrow-up.png');
                    }

            .sidebar-nav > .sidebar-brand {
                height: 65px;
                font-size: 18px;
                line-height: 60px;
            }

                .sidebar-nav > .sidebar-brand a {
                    color: #999999;
                }

                    .sidebar-nav > .sidebar-brand a:hover {
                        color: #fff;
                        background: none;
                    }

        @@media(min-width:768px) {
            #wrapper {
